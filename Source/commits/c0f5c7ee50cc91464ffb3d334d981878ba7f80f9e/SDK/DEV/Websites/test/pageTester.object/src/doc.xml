    <constants/>
    <properties>
      <scope type="public"/>
      <scope type="protected"/>
      <scope type="private"/>
    </properties>
    <methods>
      <scope type="public">
        <method name="activate" returntype="boolean" static="true">
          <description>Activates the page tester mode for the given pages.</description>
          <parameters>
            <parameter name="$websiteID" type="integer" defaultvalue="">
              <description>The website id.</description>
            </parameter>
            <parameter name="$pages" type="rray" defaultvalue="">
              <description>An array of page paths to be activated.
You can choose "all" for all pages.
The default value is "all".</description>
            </parameter>
          </parameters>
          <returndescription>True on success, false on failure.</returndescription>
          <throws/>
          <deprecated/>
        </method>
        <method name="deactivate" returntype="boolean" static="true">
          <description>Deactivates the page tester mode for the given pages.</description>
          <parameters>
            <parameter name="$websiteID" type="integer" defaultvalue="">
              <description>The website id.</description>
            </parameter>
          </parameters>
          <returndescription>True on success, false on failure.</returndescription>
          <throws/>
          <deprecated/>
        </method>
        <method name="status" returntype="boolean" static="true">
          <description>Gets the tester status for a given website page.</description>
          <parameters>
            <parameter name="$websiteID" type="integer" defaultvalue="">
              <description>The website id.</description>
            </parameter>
            <parameter name="$page" type="string" defaultvalue="">
              <description>The page path to check the tester mode.
You can choose "all" for any page.
The default value is "all".</description>
            </parameter>
          </parameters>
          <returndescription>True if view is on tester mode, false otherwise.</returndescription>
          <throws/>
          <deprecated/>
        </method>
      </scope>
      <scope type="protected"/>
      <scope type="private">
        <method name="getPages" returntype="array" static="true">
          <description>Get all pages on tester mode.</description>
          <parameters>
            <parameter name="$websiteID" type="integer" defaultvalue="">
              <description>The website id.</description>
            </parameter>
          </parameters>
          <returndescription>An array of all active page paths.</returndescription>
          <throws/>
          <deprecated/>
        </method>
